modules = ["nodejs-20"]

[run]
args = ["npm", "run", "dev"]

[run.env]
NODE_ENV = "development"
PORT = "5000"

[deployment]
build = ["npm", "install", "--legacy-peer-deps", "&&", "npm", "run", "build"]
run = ["sh", "-c", "NODE_ENV=production npm run start:replit"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NutriMa Full-Stack App"

[[workflows.workflow]]
name = "NutriMa Full-Stack App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[nix]
channel = "stable-25_05"
